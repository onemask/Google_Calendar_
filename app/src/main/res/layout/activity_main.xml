<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="367dp"
            android:layout_height="427dp"
            android:id="@+id/text_field" android:layout_marginTop="43dp"
            android:layout_marginBottom="39dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_auth" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="41dp" android:layout_marginEnd="41dp"
            app:layout_constraintVertical_bias="0.19"/>

    <LinearLayout
            android:id="@+id/layout_button"
            android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
    </LinearLayout>


    <Button
            android:id="@+id/button_auth"
            android:text="인증 시작"
            android:layout_width="100dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@+id/text_field" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.514"/>
    <Button
            android:text="Private"
            android:visibility="gone"
            android:layout_width="89dp"
            android:layout_height="53dp"
            android:id="@+id/button_month"
            app:layout_constraintEnd_toStartOf="@+id/button_auth"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.296"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_field"/>
    <Button
            android:text="Public"
            android:visibility="gone"
            android:layout_width="92dp"
            android:layout_height="52dp"
            android:id="@+id/button_holiday" app:layout_constraintStart_toEndOf="@+id/button_auth"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_field"/>
</android.support.constraint.ConstraintLayout>